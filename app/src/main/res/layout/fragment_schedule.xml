<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroung_color"

    tools:context=".Views.Homefragment"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll_id"
        android:layout_weight="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/for_long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_id"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_above="@id/days_id"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"></ImageView>

                <TextView
                    style="@style/TextCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/for_long"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:text="يبدأ الساعة"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_above="@id/days_id"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:background="@color/white"></ImageView>

            </LinearLayout>


            <TimePicker
                android:id="@+id/start_time_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/for_long"
                android:numbersInnerTextColor="@color/white"
                android:numbersTextColor="@color/white"
                android:timePickerMode="spinner" />

            <LinearLayout
                android:id="@+id/days"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_id"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_above="@id/days_id"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"></ImageView>

                <TextView
                    style="@style/TextCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/for_long"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:text="أيام التشغيل"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_above="@id/days_id"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:background="@color/white"></ImageView>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layoutDirection="rtl"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layoutDirection="rtl">


                    <CheckBox
                        android:id="@+id/sat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/white"
                        android:layoutDirection="rtl"
                        android:text="السبت"
                        android:maxLines="1"
                        android:minWidth="@dimen/_1sdp"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/white"
                        android:layoutDirection="rtl"
                        android:text="الأحد"
                        android:maxLines="1"
                        android:minWidth="@dimen/_1sdp"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/white"
                        android:layoutDirection="rtl"
                        android:text="الإثنين"
                        android:maxLines="1"
                        android:minWidth="@dimen/_1sdp"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/tue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/white"
                        android:layoutDirection="rtl"
                        android:text="الثلاثاء"
                        android:maxLines="1"
                        android:minWidth="@dimen/_1sdp"
                        android:textColor="@color/white" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/days_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
android:layout_weight="1"
                    android:layoutDirection="rtl">





                    <CheckBox
                        android:id="@+id/wed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/white"
                        android:layoutDirection="rtl"
                        android:text="الأربع"
                        android:maxLines="1"
                        android:minWidth="@dimen/_1sdp"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/thr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/white"
                        android:layoutDirection="rtl"
                        android:text="الخميس"
                        android:maxLines="1"
                        android:minWidth="@dimen/_1sdp"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/white"
                        android:layoutDirection="rtl"
                        android:text="الجمعة"
                        android:maxLines="1"
                        android:minWidth="@dimen/_1sdp"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/period"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_id"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_above="@id/days_id"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"></ImageView>

                <TextView
                    style="@style/TextCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/for_long"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:text=" يعمل لمدة"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_above="@id/days_id"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:background="@color/white"></ImageView>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/time"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/ho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="32dp"
                    android:text="ساعة"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintBottom_toTopOf="@+id/end_time_id"
                    app:layout_constraintStart_toStartOf="@+id/end_time_id" />

                <TextView
                    android:id="@+id/mn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="32dp"
                    android:text="دقيقة"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintBottom_toTopOf="@+id/end_time_id"
                    app:layout_constraintEnd_toEndOf="@+id/end_time_id" />


                <TimePicker

                    android:id="@+id/end_time_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:foregroundGravity="center"
                    android:numbersSelectorColor="#ffff"
                    android:timePickerMode="spinner"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ho" />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <TextView
                android:layout_margin="@dimen/_5sdp"
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                tools:text="سيعمل الجهاز يوم السبت و الأحد والإثنين والثلاثاء الساعة الخامسة صباحًا ولمدة 2 ساعة و 15 دقيقة" />

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/switch_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >


        <com.xgc1986.ripplebutton.widget.RippleButton
            android:id="@+id/save_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="حفظ"
            android:textSize="30sp"
            android:textStyle="bold"
            app:buttonColor="@android:color/holo_blue_dark"

            app:rippleColor="@android:color/holo_blue_bright" />
    </LinearLayout>
</LinearLayout>