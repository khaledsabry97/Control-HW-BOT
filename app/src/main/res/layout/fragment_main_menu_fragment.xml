<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    tools:context=".Views.Home_fragment"

    >

    <include
        android:id="@+id/header_id"
        layout="@layout/header_fragement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/whole_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <LinearLayout
                android:id="@+id/switch_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">


                <com.xgc1986.ripplebutton.widget.RippleButton
                    android:id="@+id/button_on"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="فتح"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    app:buttonColor="@android:color/holo_blue_dark"
                    app:rippleColor="@android:color/holo_blue_bright" />

                <com.xgc1986.ripplebutton.widget.RippleButton
                    android:id="@+id/button_off"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="غلق"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    app:buttonColor="@android:color/holo_red_dark"
                    app:rippleColor="@android:color/darker_gray" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/switch_id"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:color="#ffff"
                android:layoutDirection="rtl"
                android:text="تشغيل لمدة زمنية "
                android:textColor="#ffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch_id" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <RelativeLayout
            android:id="@+id/period_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/switch_id">

            <TimePicker
                android:id="@+id/timepicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:numbersSelectorColor="#ffff"
                android:timePickerMode="spinner"
               />

            <LinearLayout
                android:id="@+id/period_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/timepicker"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">


                <com.xgc1986.ripplebutton.widget.RippleButton
                    android:id="@+id/period_button_off"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="إيقاف"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    app:buttonColor="@android:color/holo_red_dark"
                    app:rippleColor="@android:color/darker_gray" />

                <com.xgc1986.ripplebutton.widget.RippleButton
                    android:id="@+id/period_button_on"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="بدء"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    app:buttonColor="@android:color/holo_blue_dark"
                    app:rippleColor="@android:color/holo_blue_bright" />

            </LinearLayout>

            <TextView
                android:id="@+id/remaining_time_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/period_id"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="#fff"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>


</FrameLayout>