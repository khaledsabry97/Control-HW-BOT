<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="v">
        <item name="colorPrimary">@color/colorPrimary</item>

    </style>
    <style name="TextCategoryRound">
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/size_main_category</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>


    </style>

    <style name="TextNormalLine">

        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/size_normal_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>


    </style>

    <style name="TextNormal">
        <item name="android:autoSizeMinTextSize">@dimen/_4sdp</item>

        <item name="android:textSize">@dimen/size_normal_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>


    </style>

    <style name="TextNormalRoundLine">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">@dimen/_4sdp</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/size_normal_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round</item>


    </style>


    <style name="TextNormalRound">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">@dimen/_4sdp</item>
        <item name="android:textSize">@dimen/size_normal_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round</item>


    </style>


    <style name="TextHeader">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">@dimen/_4sdp</item>

        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/size_main_title</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>


    </style>


    <style name="TextCategory">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">@dimen/_4sdp</item>

        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/size_main_category</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>

    </style>


    <style name="TextCategoryNonUniformNoLines">
        <item name="android:autoSizeMinTextSize">@dimen/_4sdp</item>

        <item name="android:textSize">@dimen/size_main_category</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">

        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@color/brownandblack</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">"type something"</item>
    </style>


    <style name="MaterialSpinner">

        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">@dimen/_4sdp</item>

        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="seperatorHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/_2sdp</item>
        <item name="android:layout_marginRight">@dimen/_2sdp</item>
        <item name="android:layout_marginTop">@dimen/_1sdp</item>
        <item name="android:layout_marginBottom">@dimen/_1sdp</item>

    </style>


    <style name="seperatorVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>


    <!-- styles.xml -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
    </style>


    <style name="TextMessageContent">

        <item name="android:textSize">@dimen/size_text_message</item>
        <item name="android:textColor">@color/black</item>


    </style>
    <style name="TextMessageHeaders">

        <item name="android:textSize">@dimen/size_text_headers</item>
        <item name="android:textColor">@color/gray_dark</item>


    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
